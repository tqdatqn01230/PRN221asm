@page
@model SignalRAssignment.Pages.Login.RegisterModel
@{
}



<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/login.css" />
        <title>Login</title>
        <script>
            function doforgetPass() {
                window.location.href="forgetPassword";
            }
        </script>
    </head>
    <body>
        <div id="logreg-forms">
            <form class="form-signin" method="post">
                <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"> Register</h1>
                Phone:
                <input class="form-control" required type="text" id="inputPhone" class="form-control" placeholder="Phone"  asp-for="customers.Phone" />
                
                Password:
                <input class="form-control" required type="text" id="inputPassword" class="form-control" placeholder="Password" asp-for="customers.Password" />
                
                Contact name:
                <input class="form-control" required type="text" id="inputContactNname" class="form-control" placeholder="Contact name" asp-for="customers.ContactName" />
                
                Address:
                <input class="form-control" required type="text" id="inputCAddress" class="form-control" placeholder="Address" asp-for="customers.Address" />
                
                <button class="btn btn-success btn-block" type="submit"><i class="fas fa-sign-in-alt"></i> Register</button>
                <hr>
                </form>
            <br>

        </div>
            
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        <script src="js/login.js"></script>
    </body>
</html>
